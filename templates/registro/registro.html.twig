{% extends 'base.html.twig' %}
{% block title %}Ingreso de Datos{% endblock %}

{% block body %}

    <header>
        <div class="header">
            <div class="top">
                <img class="logo" src="/images/logoCC.png" alt="CoinControl">
                <a href="/login"><img class="arrow" src="/images/left-arrow.png" alt=""></a>
                
            </div>
        </div>
    </header>

    <body>

        <main>
            <div class="general-login">
                <div class="register-login">
                    <h1 class="h1-login">Creá tu cuenta</h1>

                    <form method="post" action="{{ path('registro_u') }}" class="register-login">
                        <h2>Datos Personales</h2>
                        <input name="nombre" type="text" placeholder="Tu nombre" class="input-login">
                        <input name="apellido" type="text" placeholder="Tu apellido" class="input-login">
                        <input name="mail" type="text" placeholder="Tu E-mail" class="input-login">
                        <input name="dni" type="number" placeholder="Tu DNI"class="input-login">
                        <h2>Datos de Acceso</h2>
                        <input name="user" type="text" placeholder="Nombre de usuario"  class="input-login">
                        <input name="pass" type="password" maxlength="8" placeholder="Contraseña" class="input-login">
                        <a href="/registro"><button class="button-login">Crear cuenta</button></a>
                        {% for message in app.flashes('exito') %}
                            <div class="alert alert-success">
                                {{ message }}
                            </div>
                        {% endfor %}
                        {% for message in app.flashes('complete') %}
                            <div class="alert alert-success">
                                {{ message }}
                            </div>
                        {% endfor %}
                        {% for message in app.flashes('existent') %}
                            <div class="alert alert-success">
                                {{ message }}
                            </div>
                        {% endfor %}
                    </form>

                </div>
            </div>
        </main>

        <footer>
            <div class="copyright">
                <span>Copyright 2024 CoinControl. Todos los derechos reservados.</span>
            </div>
        </footer>
        
    </body>

{% endblock %}