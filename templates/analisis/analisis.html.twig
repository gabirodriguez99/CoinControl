{% extends 'base.html.twig' %}

{% block title %}Análisis de Gastos{% endblock %}

{% block body %}
    <header>
        <div class="header">
            <div class="top">
                <img class="logo" src="/images/logoCC.png" alt="CoinControl">
                <a href="/cliente"><img class="arrow" src="/images/left-arrow.png" alt="no anda boludo"></a>
                
            </div>
        </div>
    </header>

    <body>
        <main>
            <div class="general-analisis">
                <h1 class="h1-client">Análisis de gastos</h1>
                <div class="body-analisis">
                    <ul>
                        {% for categoria, montoTotal in categoriasData %}
                        <div class="analisis-data">
                            <li>{{ categoria }}</li>
                            <p>Total gastado: ${{ montoTotal }}</p>
                        </div>
                        {% endfor %}
                    </ul>
                </div>
            </div>
        </main>
        <footer>
            <div class="copyright">
                <span>Copyright 2024 CoinControl. Todos los derechos reservados.</span>
            </div>
        </footer>
    </body>
{% endblock %}
